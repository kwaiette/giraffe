#!/usr/bin/env groovy
pipeline {
	agent {
		dockerfile {
			filename "pipeline/Dockerfile"
			args "--entrypoint=''"
		}
	}
	environment {
		LC_ALL='en_US.UTF-8'
		LANG='en_US.UTF-8'
	}
	stages {
		stage('Install Dependencies') {
			steps {
				sh "npm i"
				sh 'sleep 10s'
			}
		}
		stage('Test') {
			steps {
				echo "Run tests"
				//FIXME
				sh 'sleep 10s'
			}
		}
		stage('Deploy') {
			steps {
				sh "tar -czf /tmp/giraffe.tar.gz ."
				sh "scp -r -o StrictHostKeyChecking=no -i /home/.ssh/prod-instance.pem /tmp/giraffe.tar.gz ec2-user@grf.developerlevel.com:/home/ec2-user/src/giraffe/pipeline/grfprod/"
				sh "ssh -o StrictHostKeyChecking=no -i /home/.ssh/prod-instance.pem ec2-user@grf.developerlevel.com 'cd src/giraffe && /usr/bin/git pull'"
				sh "ssh -o StrictHostKeyChecking=no -i /home/.ssh/prod-instance.pem ec2-user@grf.developerlevel.com source /home/ec2-user/src/giraffe/pipeline/grfprod/docker-build.sh"
			}
		}
	}
}
